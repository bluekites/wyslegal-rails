<% provide(:title, "Contact Us") %>

<div class="heading">
  <div class="line"></div>
  <h2 class="center">Contact Us</h2>
  <div class="line"></div>
</div>

<div class="form-wrapper">
  <% if @contact.errors.any? %>
    <h2><%= pluralize(@contact.errors.count, "error") %></h2>
    <% @contact.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>
  <%= form_for(@contact) do |f| %>
    <%= f.label :name, "Your Name", class: "form-label" %>
    <%= f.text_field :name, class: "form-field" %><br/>
    <%= f.label :email, "Your Email", class: "form-label" %>
    <%= f.text_field :email, class: "form-field" %><br/>
    <%= f.label :content, "Your Message", class: "form-label" %>
    <%= f.text_area :content, class: "form-field" %>
    <%= f.submit "Submit", class: "submit-button" %>
  <% end %>
  <h5>7891 Westminister Blvd.</h5>
<h5>Westminister, CA 92683</h5>
<h5>Tel: <a href="tel: 9493913104">(949) 391-3105</a></h5>
<h5>Email: <a href="tel: 9493913104">william@wyslegal.com</a></h5>
<br/>
<h5>Hours of operation:</h5>
<h5>M-F: 9AM to 5PM</h5>
<h5>After hours by appointment only.</h5>
</div>


