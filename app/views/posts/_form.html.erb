<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <h2><%= pluralize(@post.errors.count, "error") %></h2>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %><br/>
  <% end %>
  <div class="form-wrapper">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-field" %> <br/>
    <%= f.label :content, "Article content", class: "form-label" %>
    <%= f.text_area :content, class: "form-field" %> <br />
    <div class="button-wrapper">
      <%= f.submit class: "submit-button" %>
    </div>
  </div>
<% end %>