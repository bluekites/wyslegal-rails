<% provide(:title, "Admin Login") %>

<div class="heading">
  <div class="line"></div>
  <h2 class="center">Log In</h2>
  <div class="line"></div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="form-wrapper">
    <div class="field">
      <%= f.label :email, class: "form-label"%>
      <%= f.email_field :email, autofocus: true, class: "form-field" %>
    </div>
  
    <div class="field">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-field" %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "Log in", class: "submit-button" %>
    </div>
    <br>
    <%= render "devise/shared/links" %>
  </div>
<% end %>


